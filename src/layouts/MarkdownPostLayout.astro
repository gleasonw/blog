---
import BaseLayout from "./BaseLayout.astro";
import TextBody from "../components/TextBody.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="flex flex-col justify-center align-center text-center p-5 text-xl gap-20 mb-20">
    <p>{frontmatter.pubDate.slice(0, 10)}</p>
    <img class='object-center m-auto' src={frontmatter.image.url} alt={frontmatter.image.alt} />
  </div>
  <TextBody>
    <slot />
  </TextBody>
</BaseLayout>
